#!/usr/bin/env bash
set -euo pipefail

if [[ "$(uname -s)" != "Linux" ]]; then
  exit 0
fi

if ! command -v systemctl >/dev/null 2>&1; then
  exit 0
fi

systemctl --user daemon-reload
systemctl --user enable --now chezmoi-sync.service >/dev/null 2>&1 || true
systemctl --user enable --now chezmoi-sync-pull.timer >/dev/null 2>&1 || true
