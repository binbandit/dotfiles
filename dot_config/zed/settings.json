{
  // =============================================================================
  // GENERAL EDITOR SETTINGS
  // =============================================================================

  "helix_mode": false,
  "disable_ai": false,
  "buffer_font_weight": 700.0,
  "ui_font_weight": 400.0,
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "auto_update": true,
  "autosave": "on_focus_change",
  "base_keymap": "Atom",
  "current_line_highlight": "all",
  "relative_line_numbers": true,
  "soft_wrap": "editor_width",

  // =============================================================================
  // VISUAL THEME & APPEARANCE
  // =============================================================================

  "icon_theme": "Zed (Default)",
  "theme": "Dracula Light (Alucard",

  // =============================================================================
  // FONTS & TEXT RENDERING
  // =============================================================================

  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "MonoLisaVariable Nerd Font",

  // =============================================================================
  // VIM CONFIGURATION
  // =============================================================================

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },

  // =============================================================================
  // LAYOUT & PANELS
  // =============================================================================

  // Zen mode configuration
  // NOTE: Zen mode, refer https://github.com/zed-industries/zed/issues/4382 when it's resolved
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },

  // Panel configurations
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },

  // =============================================================================
  // TABS & NAVIGATION
  // =============================================================================

  "tab_bar": {
    "show": true
  },
  "tabs": {
    "show_diagnostics": "errors",
    "git_status": true
  },

  // =============================================================================
  // CODE EDITING FEATURES
  // =============================================================================

  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "show_background": true
  },
  "minimap": {
    "show": "auto"
  },
  "edit_predictions": {
    "mode": "subtle"
  },

  // =============================================================================
  // TOOLBAR CONFIGURATION
  // =============================================================================

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },

  // =============================================================================
  // LANGUAGE-SPECIFIC SETTINGS
  // =============================================================================

  // Refer https://zed.dev/docs/languages/javascript and https://zed.dev/docs/languages/typescript for more info
  "languages": {
    "Rust": {
      "inlay_hints": {
        "show_background": true
      }
    },
    "TypeScript": {
      // Refer https://github.com/jellydn/ts-inlay-hints for how to setup for Neovim and VSCode
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      },
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./node_modules/.bin/biome",
          "arguments": ["format", "--write", "--stdin-file-path={buffer_path}"]
        }
      }
    },
    "Python": {
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  },

  // =============================================================================
  // LANGUAGE SERVER PROTOCOL (LSP)
  // =============================================================================

  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },

  // =============================================================================
  // TERMINAL CONFIGURATION
  // =============================================================================

  "terminal": {
    "button": true,
    "copy_on_select": true,
    "blinking": "on",
    "font_family": "MonoLisaVariable Nerd Font",
    "line_height": "standard",
    "env": {
      "EDITOR": "zed --wait"
    }
  },

  // =============================================================================
  // FILE HANDLING
  // =============================================================================

  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },

  // File scanning exclusions
  "file_scan_exclusions": [
    // Default Zed exclusions
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",

    // Development artifacts
    "**/out",
    "**/dist",
    "**/node_modules",

    // Tool-specific directories
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",

    // Test and coverage directories
    "**/.tap",
    "**/.nyc_output",
    "**/report"
  ],

  // =============================================================================
  // PRIVACY & TELEMETRY
  // =============================================================================

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
