# Host profile: {{ hostname }}
# Generated by mimic

# ── Paths ──

set -l __path "$HOME/Applications"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/Applications/bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/Library/Python/3.9/bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/.local/bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/.bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/.cargo/bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/.bun/bin"
if test -d $__path
    fish_add_path $__path
end

set -l __path "$HOME/.radicle/bin"
if test -d $__path
    fish_add_path $__path
end

{{#if extra_fish_paths}}
set -l __path "{{extra_fish_paths}}"
if test -d $__path
    fish_add_path $__path
end
{{/if}}

# ── Environment ──

set -gx BUN_INSTALL "$HOME/.bun"
set -gx OPENAI_MODEL "{{ openai_model }}"
set -gx OPENAI_URL "{{ openai_url }}"
set -gx OPENAI_TIMEOUT "{{ openai_timeout }}"
set -gx OPENAI_MAX_TOKENS "{{ openai_max_tokens }}"

{{#if proxy_http}}
# ── Proxies (work) ──

set -gx HTTP_PROXY "{{ proxy_http }}"
set -gx http_proxy "{{ proxy_http }}"
set -gx HTTPS_PROXY "{{ proxy_https }}"
set -gx https_proxy "{{ proxy_https }}"
set -gx ALL_PROXY "{{ proxy_http }}"
set -gx all_proxy "{{ proxy_http }}"
{{/if}}

{{#if cert_bundle}}
# ── Certificate bundle (work) ──

set -gx CUSTOM_CERT_BUNDLE_PATH "{{ cert_bundle }}"
set -gx AWS_CA_BUNDLE "{{ cert_bundle }}"
set -gx CLOUDSDK_AUTH_CORE_CUSTOM_CA_CERTS_FILE "{{ cert_bundle }}"
set -gx CURL_CA_BUNDLE "{{ cert_bundle }}"
set -gx GIT_SSL_CAINFO "{{ cert_bundle }}"
set -gx NODE_EXTRA_CA_CERTS "{{ cert_bundle }}"
set -gx PIP_CERT "{{ cert_bundle }}"
set -gx REQUESTS_CA_BUNDLE "{{ cert_bundle }}"
set -gx SSL_CERT_FILE "{{ cert_bundle }}"
{{/if}}

# ── PNPM ──

if not set -q PNPM_HOME
    set -gx PNPM_HOME "$HOME/Library/pnpm"
end
if test -d "$PNPM_HOME"
    fish_add_path $PNPM_HOME
end
